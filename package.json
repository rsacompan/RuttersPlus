{
  "name": "rutters-plus",
  "version": "1.0.0",
  "description": "The Offical Rutters Desktop Experince",
  "author": {
    "name": "Simple System Software",
    "email": "support@simplesystemsoftware.net"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "rebuild": "electron-builder install-app-deps",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "24.6.0"
  },
  "dependencies": {
    "node-wifi": "^2.0.16"
  },
  "build": {
    "appId": "com.simplesystemssoftware.RuttersPlus",
    "productName": "RuttersPlus",
    "electronVersion": "28.2.3",
    "publish": null,
    "files": [
      "**/*",
      "assets/**/*",
      "media/**/*"
  
    ],
    "extraResources": [
      { "from": "media/", "to": "media/" },
      { "from": "Windows/", "to": "Windows/" },
      { "from": "assets/", "to": "assets/" },
      { "from": "node_modules/node-wifi", "to": "node_modules/node-wifi" }
     
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "Windows/RuttersLogo.ico",
      "target": "nsis",
      "extraResources": [
        { "from": "Windows/", "to": "Windows/" }
      ]
    },
    "mac": {
      "icon": "Mac/RuttersLogo.icns",
      "target": "dmg",
      "identity": null,
      "extraResources": [
        { "from": "Mac/", "to": "Mac/" }
      ]
    },
    "linux": {
      "icon": "assets/linux-icon.png",
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
