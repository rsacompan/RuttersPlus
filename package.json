{
  "name": "rutters-plus",
  "version": "1.0.0",
  "description": "Cross-platform app for Rutters Plus",
  "author": {
    "name": "Simple System Software",
    "email": "support@simplesystemsoftware.net"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "rebuild": "electron-builder install-app-deps",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "24.6.0"
  },
  "dependencies": {
    "node-wifi": "^2.0.16"
  },
  "build": {
    "appId": "com.simplesystemssoftware.RuttersPlus",
    "productName": "RuttersPlus",
    "electronVersion": "28.2.3",
    "publish": null,
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/node-wifi",
        "to": "node_modules/node-wifi"
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "Windows/RuttersLogo.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "Mac/RuttersLogo.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "build/linux-icon.png",
      "category": "Utility",
      "target": ["AppImage", "deb"]
    }
  }
}
